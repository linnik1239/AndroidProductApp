<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.practice12">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Practice12"
        android:usesCleartextTraffic="true">


        <activity
            android:name=".Activities.EditAddressActivity"
            android:label="@string/title_activity_edit_address"></activity>
        <activity
            android:name=".Activities.SuccessPayActivity"
            android:label="@string/title_activity_success_pay" />
        <activity
            android:name=".Activities.PaymentActivity"
            android:label="@string/title_activity_payment" />
        <activity
            android:name=".Activities.AddAddressActivity"
            android:label="@string/title_activity_add_address" />
        <activity
            android:name=".Activities.AddressActivity"
            android:label="@string/title_activity_address" />
        <activity
            android:name=".Activities.ProductCartListActivity"
            android:label="@string/title_activity_product_cart_list" />
        <activity
            android:name=".Activities.EnterActivity2"
            android:label="@string/title_activity_enter2"
            android:theme="@style/Theme.Practice12.NoActionBar" />
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <activity
            android:name=".Activities.ProductDetailActivity"
            android:label="@string/title_activity_product_detail"
            android:theme="@style/Theme.Practice12.NoActionBar" />
        <activity
            android:name=".Activities.RegisterActivity"
            android:label="@string/title_activity_sub_category"
            android:theme="@style/Theme.Practice12.NoActionBar" />
        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/title_activity_sub_category"
            android:theme="@style/Theme.Practice12.NoActionBar" />
        <activity
            android:name=".Activities.SubCategoryActivity"
            android:label="@string/title_activity_sub_category"
            android:theme="@style/Theme.Practice12.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>